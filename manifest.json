{
  "manifest_version": 3,
  "name": "Zionism Observer Research Archiver",
  "version": "1.0",
  "description": "Redirects to Zionism Oberserver and fills the archive form with the current URL",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["activeTab", "tabs", "storage", "contextMenus"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "./icons/icon16.png",
    "32": "./icons/icon32.png",
    "48": "./icons/icon48.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content.css"],
      "js": ["content.js"]
    }
  ]
}
